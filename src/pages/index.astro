<style>
	/* CSS styles specific to this Astro page */
	body {
		overflow-x: hidden;
		width: 100vw;
	}

	.carousel-row {
  display: flex;
  overflow-x: auto;
  gap: 16px;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  -ms-overflow-style: none;
}


.blaze-slider {
  --slide-gap: 20px;
  --slides-to-show: 3;
}

	.avatar-placeholder {
		display: inline-block;
		width: 42px;
		height: 42px;
		border-radius: 50%;
		background-image: url('../assets/jamie-headshot.jpg');
  		background-size: cover;
  		background-position: center center;
  		margin-right: 4px;
	}

	@keyframes pulse {
		0% {
			box-shadow: 0 0 0 0px rgba(66, 160, 143, 0.7);
		}
		70% {
			box-shadow: 0 0 0 10px rgba(0, 255, 0, 0);
		}
		100% {
			box-shadow: 0 0 0 0px rgba(0, 255, 0, 0);
		}
	}

	.pulsating-circle {
		display: inline-block;
		width: 10px;
		height: 10px;
		border-radius: 50%;
		background-color: #42a08f;
		animation: pulse 2s infinite;
		margin-right: 4px;
	}

	.marquee-container {
  overflow: hidden;
  white-space: nowrap;
  box-sizing: border-box;
  /* Set a specific height or keep it auto */
  height: 50px; /* Example height */
  /* Ensure the container's width is what you want */
  width: 100%; /* Full width */
}

.marquee-text {
  padding-left: 100%; /* Start offscreen to the right */
  animation: marquee 60s linear infinite; /* Adjust timing as needed */
}

@keyframes marquee {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(-100%); /* Move it all the way to the left */
  }
}


</style>

