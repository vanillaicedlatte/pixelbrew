import BlazeSlider from 'blaze-slider';

// Initialize the first slider without delay
const slider1 = document.querySelector('.blaze-slider-1')  as HTMLElement;
new BlazeSlider(slider1, {
  all: {
	slidesToShow: 3,
		enableAutoplay: true,
		transitionDuration: 1000,
		autoplayInterval: 9000,
		slideGap: '20px',
		transitionTimingFunction: 'cubic-bezier(.18,.74,.2,1.27)',
  },
});

// Function to initialize the second slider
function initializeSlider2() {
	const slider2 = document.querySelector('.blaze-slider-2') as HTMLElement;
	new BlazeSlider(slider2, {
		all: {
			slidesToShow: 3,
				transitionDuration: 1000,
				enableAutoplay: true,
				autoplayInterval: 9000,
				autoplayDirection: 'to right',
				slideGap: '20px',
				transitionTimingFunction: 'cubic-bezier(.18,.74,.2,1.27)',
	},
  });
}

// Function to initialize the third slider
function initializeSlider3() {
  const slider3 = document.querySelector('.blaze-slider-3') as HTMLElement;
  new BlazeSlider(slider3, {
	all: {
		slidesToShow: 3,
		transitionDuration: 1000,
		enableAutoplay: true,
		autoplayInterval: 9000,
		slideGap: '20px',
		transitionTimingFunction: 'cubic-bezier(.18,.74,.2,1.27)',
	},
  });
}

// Set timeouts for the second and third sliders
setTimeout(initializeSlider2, 3000); // 3000ms delay for the second slider
setTimeout(initializeSlider3, 6000); // 6000ms delay for the third slider

// duplicate marquee text
window.addEventListener('DOMContentLoaded', (event) => {
    const marqueeText = document.querySelector('.marquee-text');
    if (marqueeText !== null) {
        const content = marqueeText.innerHTML;
        const repetitions = 6; // Number of times the text should repeat

        for (let i = 1; i < repetitions; i++) {
            marqueeText.innerHTML += content;
        }
    }
});
