    <section class="bg-neutral" id="professional">
        <div class="container mx-auto lg:py-16">
            <div class="w-full flex flex-row gap-8 flex-wrap lg:flex-nowrap p-8 lg:p-0">
            <div class="w-full lg:basis-80 grow-0 shrink-0 text-base-100 bg-white p-8 border border-1 border-base-100">
